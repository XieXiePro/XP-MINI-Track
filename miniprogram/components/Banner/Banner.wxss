@import '../../app.wxss';

.swiper {
  width: 700rpx;
  height: 400rpx;
  margin: 30rpx 25rpx 20rpx 25rpx;
}

.swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 700rpx;
  height: 100%;
}

.home-login {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  justify-content: center;
  z-index: 3;
}

.main {
  width: 500rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.login-tip {
  color: #999;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 28rpx;
}

.login {
  padding: 26rpx 140rpx;
  line-height: 1;
  background: linear-gradient(to right, #ff9b00, #fb7014);
  color: #fff;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.login::after {
  border: none;
}

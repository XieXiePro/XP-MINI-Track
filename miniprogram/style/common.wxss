/* 单行截断 */

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bold {
  font-weight: bold;
}

.num {
  display: flex;
  box-sizing: border-box;
  width: 260rpx;
  height: 80rpx;
  /* overflow: hidden; *//* border: 1rpx solid #333333; */
  border-radius: 10rpx;
}

.num-down, .num-up {
  line-height: 80rpx;
  flex: 0 0 31%;
  color: #757575;
  background-color: #fff;
}

.num-down {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.num-up {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.num-l-def {
  border: 1rpx solid #222;
  background: #fff;
  color: #222;
}

.num-r-def {
  border: 1rpx solid #222;
  color: #222;
}

.num-l-active {
  border: 1rpx solid #ccc;
  background: #fff;
  color: #ccc;
}

.num-r-active {
  border: 1rpx solid #ccc;
  color: #ccc;
}

.num-down::after {
  border: 0;
}

.num-up::after {
  border: 0;
}

.num-content {
  flex: 0 0 38%;
  text-align: center;
  line-height: 80rpx;
  border-top: 1rpx solid #222;
  border-bottom: 1rpx solid #222;
}

.cus-title {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #dba660;
  font-size: 30rpx;
  font-weight: bold;
}

.cus-title::after {
  position: absolute;
  top: 50%;
  left: 14.6%;
  content: '';
  width: 21.2%;
  border-top: 1rpx solid #ecc28b;
}

.cus-title::before {
  position: absolute;
  top: 50%;
  right: 14.6%;
  content: '';
  width: 21.2%;
  border-top: 1rpx solid #ecc28b;
}

.empty {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #bbb;
  font-size: 22rpx;
  font-weight: bold;
}

.empty::after {
  position: absolute;
  top: 50%;
  left: 35%;
  content: '';
  width: 5%;
  border-top: 1rpx solid #ddd;
}

.empty::before {
  position: absolute;
  top: 50%;
  right: 35%;
  content: '';
  width: 5%;
  border-top: 1rpx solid #ddd;
}

.close {
  width: 36rpx;
  height: 36rpx;
}

.line-through {
  text-decoration: line-through;
}

.row {
  display: flex;
  flex-direction: row;
}

.col {
  display: flex;
  flex-direction: column;
}

/* 1)单行文本溢出 */

.row-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 2)多行文本溢出 */

.rows-ellipsis {
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical; /*方向*/
  -webkit-line-clamp: 2; /*显示多少行文本*/
}

.num-down, .num-up {

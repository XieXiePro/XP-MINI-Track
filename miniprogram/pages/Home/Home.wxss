@import "/style/common.wxss";

page {
  border-top: 1px solid rgb(238, 238, 239);
  background: #fff;
  display: flex;
  flex-direction: column;
}

.course-null {
  display: flex;
  text-align: center;
  position: fixed;
  bottom: 5%;
  justify-content: center;
  width: 100%;
  height: 1200rpx;
  line-height: 1450rpx;
  color: #999;
  font-size: 28rpx;
  background: #f5f5f5;
}

.list-container {
  top: 120rpx;
  display: flex;
  align-items: center;
}

.list-item {
  display: flex;
  flex-direction: column;
  position: flex;
}

.list-item-image {
  width: 700rpx;
  height: 400rpx;
  opacity: 1;
  margin: 25rpx;
}

.list-item-text {
  display: block;
  position: relative;
  left: 0;
  top: 0;
  font-size: 32rpx;
  background: white;
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
}

.list-content {
  width: 750rpx;
  background: #fff;
}

.img-content {
  width: 100%;
}

.bottom-view {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 120rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  text-align: center;
  background: #fff;
  border-top: 1px solid rgb(220, 220, 220);
}

.top-view {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  width: 750rpx;
  height: 120rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  text-align: center;
  background: #fff;
  border-top: 1px solid rgb(220, 220, 220);
}

.bottom-btn {
  width: 540rpx;
  height: 80rpx;
  border-radius: 40rpx;
  align-items: center;
  text-align: center;
  justify-content: center;
  background: linear-gradient(90deg, rgba(253, 230, 79, 1), rgba(255, 204, 0, 1));
}
